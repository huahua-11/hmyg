<!--添加地址-->
<view class="cart-wrap">
    <!-- 
    0 address默认值是空对象 true 
    1 当 address 里面有真正的地址信息的时候 不要显示按钮！！！
    2 没有 地址信息的时候才显示按钮！！！
    
    --> 
    <view wx:if="{{!address.all}}" class="cart-wrap-btn">
        <button plain type="primary" bindtap="handleChooseAddress">添加收货地址</button>
    </view>  
    <view wx:else class="cart-address">
        <view class="address-user">
            <view>收货人：{{address.userName}}</view>
            <view>{{address.all}}</view>
        </view>
        <view class="address-phone">{{address.telNumber}}</view>
    </view>

</view>
<!--购物车添加-->
<view class="main">
    <view class="mian-title">优购生活馆</view>
    <view class="mian-content">
        <view class="mian-item" 
        wx:for="{{cart}}"
        wx:for-index="key"
        wx:for-item="value"
        wx:key="value">
            <!-- 上面是一个的对象-->    <!-- 复选框 -->
            <view class="content-chk">
                <checkbox-group bindtap="handleCartCheck" data-index="{{value.goods_id}}">
                    <checkbox color="red" checked="{{value.checked}}"> </checkbox>
                </checkbox-group>
            </view>
            <!-- 商品图片 -->
            <view class="content-img">
                <image mode="widthFix" src="{{value.goods_small_logo}}"></image>
            </view>
            <!-- 商品信息 -->
            <view class="content-info">
                <view class="info-name">{{value.goods_name}}</view>
                <view class="info-numper">
                    <view class="info-price">￥{{value.goods_price}}</view>
                    <view class="info-num">
                        <text class="info-num-exit" bindtap="handleCartNumEit" data-operation="{{-1}}" data-id="{{value.goods_id}}">-</text>
                        <text class="num">{{value.num}}</text>
                        <text class="info-num-exit" bindtap="handleCartNumEit" data-operation="{{1}}" data-id="{{value.goods_id}}">+</text>
                    </view>
                </view>
            </view> 
        </view>
    </view>
</view>
<!-- 底部结算 -->
<view class="btm-tool">
    <view class="all-check-wrap">
        <checkbox-group bindchange="handleCartAllCheck">
            <checkbox color="red" checked="{{isAllChecked}}">全选</checkbox>
        </checkbox-group>
    </view>
    <view class="total-price-wrap">
        <view class="tltal-price">合计：<text>￥{{totalPrice}}</text></view>
        <view class="freight-tips">包含运费</view>
    </view>
    <view class="cart-pay">结算({{totalNum}})</view>
</view>
