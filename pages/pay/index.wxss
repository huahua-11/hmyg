page {
  padding-bottom: 90rpx;
}
.cart-wrap {
  margin-bottom: 30rpx;
}
.cart-wrap .cart-wrap-btn {
  padding: 20rpx 0;
}
.cart-wrap .cart-wrap-btn button {
  width: 45%;
}
.main .mian-title {
  padding: 20rpx;
  color: #eb4450;
  font-size: 36rpx;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
}
.main .mian-content .mian-item {
  display: flex;
  border-bottom: 1rpx solid #ccc;
  padding: 1rpx;
}
.main .mian-content .mian-item .content-img {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.main .mian-content .mian-item .content-img img {
  widows: 80%;
}
.main .mian-content .mian-item .content-info {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.main .mian-content .mian-item .content-info .info-name {
  color: #000;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.main .mian-content .mian-item .content-info .info-numper {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
}
.main .mian-content .mian-item .content-info .info-numper .info-price {
  color: #ff0000;
  font-size: 32rpx;
  font-weight: 600;
}
.main .mian-content .mian-item .content-info .info-numper .info-num {
  color: #000;
}
.btm-tool {
  border-top: 1rpx solid #ccc;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
  height: 100rpx;
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.btm-tool .total-price-wrap {
  text-align: right;
  padding-right: 20rpx;
}
.btm-tool .total-price-wrap .tltal-price {
  color: #000;
  font-size: 34rpx;
}
.btm-tool .total-price-wrap .tltal-price text {
  color: #ff0000;
  font-weight: 600;
}
.btm-tool .cart-pay {
  flex: 0.33333333;
  background: #ff0000;
  color: #fff;
  font-size: 34rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}
