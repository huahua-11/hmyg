/*轮播图 */
.index-swiper swiper {
  height: 340rpx;
}
.index-cates {
  display: flex;
}
.index-cates navigator {
  flex: 1;
  padding: 25rpx;
}
.index-floor .floor-item .floor-list {
  padding: 0 10rpx;
  /* 清除浮动 */
  overflow: hidden;
}
.index-floor .floor-item .floor-list navigator {
  width: 33.33%;
  float: left;
  /* 后四个超链接 */
  /* 后两个超链接 */
}
.index-floor .floor-item .floor-list navigator:nth-last-child(-n + 4) {
  /*  
      原图的宽度 / 原图的高度  =变化后的宽度 / 变化后的高度  
      变化后的高度  = 变化后的宽度(750rpx / 3 ) * 原图的高度 / 原图的宽度
      height =  750rpx / 3 *  386 / 232;
      height =  750rpx / 3 *  386 / 232  / 2 
      */
  height: 207.97413793rpx;
  border-left: 10rpx solid #fff;
}
.index-floor .floor-item .floor-list navigator:nth-last-child(-n+2) {
  border-top: 10rpx solid #fff;
}
.index-floor .floor-item .floor-list navigator image {
  height: 100%;
}
